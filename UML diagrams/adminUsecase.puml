@startuml
title Use Case Diagram - Public Grievance Reporting System (Admin Perspective - True Vertical Layout)

top to bottom direction

skinparam shadowing false
skinparam linetype ortho
skinparam actor {
  FontSize 14
  FontColor black
}
skinparam usecase {
  BackgroundColor white
  BorderColor black
  FontColor black
}
skinparam rectangle {
  BorderColor black
  RoundCorner 10
}
skinparam defaultTextAlignment center

'=======================
' ACTOR AT TOP
'=======================
actor "Admin" as AdminUser

'=======================
' SYSTEM BOUNDARY (VERTICAL STACK)
'=======================
rectangle "Public Grievance Reporting System" as System {

  usecase "Register Admin" as UC_Register
  usecase "Login" as UC_Login
  
  usecase "View Complaints" as UC_ViewComplaints
  usecase "Assign Complaint" as UC_Assign
  usecase "Verify Resolution" as UC_Verify
  usecase "Close Complaint" as UC_Close
  
  usecase "Add Worker" as UC_AddWorker
  usecase "Update Worker" as UC_UpdateWorker
  usecase "View Worker Logs" as UC_WorkerLogs
  
  usecase "Add Department" as UC_AddDept
  usecase "Update Department" as UC_UpdateDept
  
  usecase "View Activity Logs" as UC_ViewLogs
  usecase "Generate Reports" as UC_Reports
}

'=======================
' CONNECTIONS (STRAIGHT DOWN)
'=======================
AdminUser -down-> UC_Register
AdminUser -down-> UC_Login
AdminUser -down-> UC_ViewComplaints
AdminUser -down-> UC_Assign
AdminUser -down-> UC_Verify
AdminUser -down-> UC_Close
AdminUser -down-> UC_AddWorker
AdminUser -down-> UC_UpdateWorker
AdminUser -down-> UC_WorkerLogs
AdminUser -down-> UC_AddDept
AdminUser -down-> UC_UpdateDept
AdminUser -down-> UC_ViewLogs
AdminUser -down-> UC_Reports

'=======================
' INCLUDES / EXTENDS
'=======================
UC_Assign .> UC_ViewComplaints : <<include>>
UC_Verify .> UC_Assign : <<include>>
UC_Close .> UC_Verify : <<include>>
UC_Reports .> UC_ViewLogs : <<include>>

@enduml
